            var LoadingFinished = true;
            if (!self.isCreating) {
                LoadingFinished = false;
            }

            self.CopyDescToOwDesc = function () {
                self.GRPOLine.overwriteDescription($('#AddUpdateItemModal').find("#Description:first").find("option:selected").text());
            }

            self.LoadSupplierBasedDropdowns = function (cardcode) {
                    $.when(
                    // Initial Ajax Requests, while page loading
                    //Load Supplier's ContactPersons
                    $.ajax({
                        url: "@Url.Action("GetContactPersons", "ContactPersons", null)",
                        type: 'post',
                        contentType: 'application/x-www-form-urlencoded',
                        data: ko.toJS({ CardCode: cardcode }),
                        success: function (data) {
                            self.SupplierContactPersons(data);

                        },
                        error: function () { }
                    }),
                    //Load Shipping Addresses
                    $.ajax({
                        url: "@Url.Action("GetCustomerShippingAddresses", "CustomerAddress", null)",
                        type: 'post',
                        contentType: 'application/x-www-form-urlencoded',
                        data: ko.toJS({ CardCode: 'BM-SHIPTO' }),
                        success: function (data) {

                            self.SupplierShipToAddresses(data);

                        },
                        error: function () { }
                    }),
                    //Load Billing Addresses
                    $.ajax({
                        url: "@Url.Action("GetCustomerBillingAddresses", "CustomerAddress", null)",
                        type: 'post',
                        contentType: 'application/x-www-form-urlencoded',
                        data: ko.toJS({ CardCode: cardcode }),
                        success: function (data) {

                            self.SupplierBillToAddresses(data);
                        },
                        error: function () { }
                    })
                    ).done(function () {

                            if (LoadingFinished === false) {


                                self.GRPO.billTo(dO.billTo);
                                $('#BillTo').val(dO.billTo).trigger('change');
                                self.GRPO.shipTo(dO.shipTo);
                                $('#ShipTo').val(dO.shipTo).trigger('change');


                                 $.ajax({
                                                url: "@Url.Action("GetSupplierDetails", "Supplier", null)",
                                                type: 'post',
                                                contentType: 'application/x-www-form-urlencoded',
                                                    data: ko.toJS({ CardCode: cardcode }),
                                success: function (data) {                                                                                                         
                                                    $('#GstName').val(data.DefaultTaxGroup).trigger('change');                                                                                       
                                                },
                                                error: function () { }
                                            });

                                LoadingFinished = true;
                            }
                        else {
                            $.ajax({
                                                url: "@Url.Action("GetSupplierDetails", "Supplier", null)",
                                                type: 'post',
                                                contentType: 'application/x-www-form-urlencoded',
                                                    data: ko.toJS({ CardCode: cardcode }),
                                                success: function (data) {

                                                    var PaymentTermsDays = parseInt(data.PaymentTermDays);
                                                    self.GRPO.fax(data.Fax);
                                                    self.GRPO.officeTelNo(data.OfficeTelNo);

                                                    self.GRPO.currency(data.Currency);

                                                    self.GRPO.paymentTermName(data.PymntGroup);
                                                    self.GRPO.slpName(data.SlpName);


                                                    let BillToDefVal = data.BillToDef;
                                                    $('#BillTo').val("").trigger('change');
                                                    $('#BillTo').val(BillToDefVal).trigger('change');

                                                    let ShipToDefVal = data.ShipToDef;
                                                    $('#ShipTo').val("").trigger('change');
                                                    $('#ShipTo').val(ShipToDefVal).trigger('change');


                                                    $('#GstName').val(data.DefaultTaxGroup).trigger('change');
                                                    var DDate = self.GRPO.docDate();
                                                    var DateParts = DDate.split("/");
                                                    var dt = new Date(parseInt(DateParts[2], 10),
                                                        parseInt(DateParts[1], 10) - 1,
                                                        parseInt(DateParts[0], 10) + PaymentTermsDays);
                                                    var dd = dt.getDate();
                                                    var mm = dt.getMonth() + 1;

                                                    var yyyy = dt.getFullYear();
                                                    if (dd < 10) {
                                                        dd = '0' + dd;
                                                    }
                                                    if (mm < 10) {
                                                        mm = '0' + mm;
                                                    }
                                                    var FormattedDueDate = dd + '/' + mm + '/' + yyyy;

                                                    self.GRPO.dueDate(FormattedDueDate);



                                                },
                                                error: function () { }
                                            });
                        }


                });
            };

            // Model Binding
            self.GRPO = {                
                docNum: ko.observable(dO.docNum),
                cardCode: ko.observable(dO.cardCode),
                cardName: ko.observable(dO.cardName),
                currency: ko.observable(dO.currency),
                officeTelNo: ko.observable(dO.officeTelNo),
                fax: ko.observable(dO.fax),
                printedStatus: ko.observable(dO.printedStatus),
                docDate: ko.observable(dO.docDate),
                dueDate: ko.observable(dO.dueDate),
                deliveryDate: ko.observable(dO.deliveryDate),
                poNo: ko.observable(dO.poNo),
                exRate: ko.observable(parseFloat(dO.exRate).toFixed(6)),
                paymentTermName: ko.observable(dO.paymentTermName),
                slpName: ko.observable(dO.slpName),
                pORNo: ko.observable(dO.pORNo),
                headerRemarks1: ko.observable(dO.headerRemarks1),
                headerRemarks2: ko.observable(dO.headerRemarks2),
                headerRemarks3: ko.observable(dO.headerRemarks3),
                headerRemarks4: ko.observable(dO.headerRemarks4),
                footerRemarks1: ko.observable(dO.footerRemarks1),
                footerRemarks2: ko.observable(dO.footerRemarks2),
                footerRemarks3: ko.observable(dO.footerRemarks3),
                footerRemarks4: ko.observable(dO.footerRemarks4),
                billTo: ko.observable(dO.billTo),
                billToAddress1: ko.observable(dO.billToAddress1),
                billToAddress2: ko.observable(dO.billToAddress2),
                billToAddress3: ko.observable(dO.billToAddress3),
                billToAddress4: ko.observable(dO.billToAddress4),
                billToAddress5: ko.observable(dO.billToAddress5),

                shipTo: ko.observable(dO.shipTo),
                shipToAddress1: ko.observable(dO.shipToAddress1),
                shipToAddress2: ko.observable(dO.shipToAddress2),
                shipToAddress3: ko.observable(dO.shipToAddress3),
                shipToAddress4: ko.observable(dO.shipToAddress4),
                shipToAddress5: ko.observable(dO.shipToAddress5),

                selfCollect: ko.observable(dO.selfCollect),
                selfCollectRemarks1: ko.observable(dO.selfCollectRemarks1),
                selfCollectRemarks2: ko.observable(dO.selfCollectRemarks2),
                selfCollectRemarks3: ko.observable(dO.selfCollectRemarks3),
                selfCollectRemarks4: ko.observable(dO.selfCollectRemarks4),
                selfCollectRemarks5: ko.observable(dO.selfCollectRemarks5),

                discByPercent: ko.observable(dO.discByPercent),
                discPercent: ko.observable(dO.discPercent),
                discAmount: ko.observable(dO.discAmount),                
                grandTotal: ko.observable(parseFloat(dO.grandTotal).toFixed(2)),
                submittedToSAP: ko.observable(dO.submittedToSAP),
                syncedToSAP: ko.observable(dO.syncedToSAP),
                syncStatus: ko.observable(dO.syncStatus),
                currentUserIsNotInRoleNotes: ko.observable(dO.currentUserIsNotInRoleNotes),
                lines: ko.observableArray(dO.lines),
                noteLines: ko.observableArray(dO.noteLines),


            }

            if (dO.printedStatus === 0) {
                self.GRPO.printedStatusName = ko.observable('Not Printed');
            }
            else {
                self.GRPO.printedStatusName = ko.observable('Printed');
            }
            self.GRPO.printedStatus.subscribe(function (newValue) {
                if (newValue === 0)
                    self.GRPO.printedStatusName('Not Printed');
                else
                    self.GRPO.printedStatusName('Printed');
            })
            self.printPreview = function () {
              
                $.ajax({
                url: "@Url.Action("CanPrint", "GRPO", null)",
                type: 'post',
                contentType: 'application/x-www-form-urlencoded',
                data: ko.toJS({ DocEntry: @Model.DocEntry }),
                success: function (data)
                {
                    if (data.canAccess) {                       
                        self.GRPO.printedStatus(1);
                        window.open(self.previewUrl(), '_blank');       
                    }
                    else {                        
                        let form = $('form[id="GRPOForm"]');
                        window.scrollTo({ top: 0, behavior: 'smooth' });
                        $('<div class="alert alert-danger alert-dismissible"><button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button><h4><i class="icon fa fa-ban"></i> Alert!</h4><p>Access denied</p></div>')
                            .prependTo($(form))
                            .delay(5000)
                            .slideUpAndRemove('slow');   
                    }
                            
                },
                error: function ()
                {
                             
                }
                });
            }


            self.isDisabled(self.GRPO.submittedToSAP());
            if (self.isDisabled() === false) {
                self.isDisabled(self.GRPO.syncedToSAP());
            }
            if (self.GRPO.syncStatus() == 3) { // Sync Failed
                self.isDisabledResubmit(false);
                if (self.isDisabled() === false) {
                    self.isDisabled(true);
                }
            }
            else {
                self.isDisabledResubmit(true);

            }
            //Total Calculation
            self.GRPO.netTotal = ko.computed(function () {

                 
                var calculated = 0;
                if (self.GRPO.lines() !== null) {
                    for (var i = 0; i < self.GRPO.lines().length; i++) {
                        calculated = calculated + parseFloat(self.GRPO.lines()[i].lineTotal);
                    }
                }
                if (isNaN(calculated)) {
                    return 0;
                }
                else {
                    return roundToTwo(calculated);
                }
            }, self) //Computed observable
            self.GRPO.gstTotal = ko.computed(function () {
                var calculated = 0;
                var discAmt = 0;
                var disperc = 0;
                disperc = self.GRPO.discPercent();
                if (isNaN(disperc)) {
                    disperc = 0
                }
                if (self.GRPO.lines() !== null) {
                    let lines = ko.toJS(self.GRPO.lines());
                    let groupedLines = groupBy(lines, 'gstName');

                    Object.keys(groupedLines).forEach(key => {
                        let lineGroupTotal = 0;
                        for (var i = 0; i < groupedLines[key].length; i++) {
                            if (disperc > 0) {
                                discAmt = parseFloat(groupedLines[key][i].lineTotal) * parseFloat(disperc) / 100;
                            }
                            lineGroupTotal = parseFloat(roundToTwo(lineGroupTotal + parseFloat(roundToTwo((parseFloat(groupedLines[key][i].lineTotal) - discAmt)))));
                        }
                        calculated = calculated + (parseFloat(lineGroupTotal) * (parseFloat(groupedLines[key][0].gst) / 100));
                    }); 
                }
               
                if (isNaN(calculated)) {
                    return 0;
                }              
                else {
                    return roundToTwo(calculated);
                }
            }, self) //Computed observable
            self.GRPO.netTotal.subscribe(function (newValue) {
                self.CalcDiscounts();
            }, self)
            self.GRPO.discPercent.subscribe(function (newValue) {
                self.CalcDiscounts();
            }, self)
            self.GRPO.discAmount.subscribe(function (newValue) {
                self.CalcDiscounts();
            }, self)
            self.GRPO.gstTotal.subscribe(function (newValue) {
                self.CalcTotals();
            }, self)

            self.CalcTotals = function () {

                

                var GrandTotal = 0;
                if (!isNaN(self.GRPO.netTotal()) && !isNaN(self.GRPO.discAmount()) && !isNaN(self.GRPO.gstTotal())) {
                    GrandTotal = parseFloat(self.GRPO.netTotal()) - parseFloat(self.GRPO.discAmount()) + parseFloat(self.GRPO.gstTotal());

                }
                 
                if (isNaN(GrandTotal)) {
                    self.GRPO.grandTotal(0);
                }
                else {
                    GrandTotal = parseFloat(GrandTotal).toFixed(2);
                    self.GRPO.grandTotal(GrandTotal);
                }

            }
            self.CalcDiscounts = function () {

                if (self.GRPO.discByPercent() === "true") {

                    var calculated = 0;
                    if (!isNaN(self.GRPO.netTotal()) && !isNaN(self.GRPO.discPercent())) {
                        calculated = self.GRPO.netTotal() * (self.GRPO.discPercent() / 100);
                    }
                    if (isNaN(calculated)) {
                        self.GRPO.discAmount(0);
                    }
                    else {
                        calculated = roundToTwo(calculated);
                        self.GRPO.discAmount(calculated);
                    }
                }
                else {

                    var calculated = 0;
                    if (!isNaN(self.GRPO.netTotal()) && !isNaN(self.GRPO.discAmount())) {

                        calculated = (self.GRPO.discAmount() * 100) / self.GRPO.netTotal();
                    }
                    if (isNaN(calculated)) {
                        self.GRPO.discPercent(0);
                    }
                    else {
                        calculated = roundToTwo(calculated);
                        self.GRPO.discPercent(calculated);
                    }
                }

                self.CalcTotals();


            }

            if (!self.isCreating) {
                self.LoadSupplierBasedDropdowns(self.GRPO.cardCode);
            }

            var originalState = dO;

            //Single GRPOLine Object Setup
            self.GRPOLine = {
                lineNum: ko.observable(),
                itemCode: ko.observable(),
                description: ko.observable(),
                overwriteDescription: ko.observable(),
                description2: ko.observable(),
                description3: ko.observable(),
                description4: ko.observable(),
                description5: ko.observable(),
                description6: ko.observable(),
                serialNumber: ko.observable(),
                qty: ko.observable(),
                location: ko.observable(),
                locationText: '',
                unitPrice: ko.observable(),
                gstName: ko.observable(),
                gst: '',
            }
            //Single GRPONote Object Setup
            self.GRPONote = {
                lineNum: ko.observable(),
                note: ko.observable(),
            }
