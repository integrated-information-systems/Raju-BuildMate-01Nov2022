                        }
                        else {
                            defaultDescription = self.GRPO.lines()[i].overwriteDescription;
                        }
                        if (self.GRPO.lines()[i].description2 !== null) {
                            if (self.GRPO.lines()[i].description2 !== "") {
                                AddtionalRemarks = AddtionalRemarks + self.GRPO.lines()[i].description2 + "<br/>"
                            }
