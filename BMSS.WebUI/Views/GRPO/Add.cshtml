                var calculated = parseFloat(self.GRPOLine.qty()) * parseFloat(self.GRPOLine.unitPrice());
                if (isNaN(calculated)) {
                    return 0;
                }
                else {
                    return roundToTwo(calculated);
                }
            }, self) //Computed observable


