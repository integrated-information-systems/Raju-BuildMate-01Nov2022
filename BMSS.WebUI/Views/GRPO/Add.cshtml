                            itemCode: self.GRPOLine.itemCode(),
                            description: InputDescription,
                            overwriteDescription: self.GRPOLine.overwriteDescription(),
                            description2: self.GRPOLine.description2(),
                            description3: self.GRPOLine.description3(),
                            description4: self.GRPOLine.description4(),
                            description5: self.GRPOLine.description5(),
                            description6: self.GRPOLine.description6(),
                            serialNumber: self.GRPOLine.serialNumber(),
                            qty: parseFloat(self.GRPOLine.qty()).toFixed(3),
                            location: self.GRPOLine.location(),
                            locationText: LocationText,
                            unitPrice: parseFloat(self.GRPOLine.unitPrice()).toFixed(4),
                            gstName: self.GRPOLine.gstName(),
                            gst: GstValue,
                            lineTotal: parseFloat(self.GRPOLine.lineTotal()).toFixed(2),
