@model BMSS.WebUI.Models.AccountViewModels.LoginViewModel
@{ ViewBag.Title = "Login";}
<h2 class="text-center">Log In</h2>
@Html.ValidationSummary()
@using (Html.BeginForm())
{
    <input type="hidden" name="returnUrl" value="@ViewBag.returnUrl" />
    @Html.AntiForgeryToken();
    <div class="form-group has-feedback">
        @Html.TextBoxFor(x => x.Name, new { @class = "form-control", placeholder = Html.DisplayNameFor(x => x.Name) })
    </div>
    <div class="form-group has-feedback">
        @Html.PasswordFor(x => x.Password, new { @class = "form-control", placeholder = Html.DisplayNameFor(x => x.Password) })
    </div>
    <div class="row">
        <div class="col-12 text-center">
            <button class="btn btn-primary btn-block btn-flat" type="submit">Log In</button>
        </div>
    </div>
}
