@using BMSS.WebUI.Models.CashSalesViewModels
@model CashSalesPayViewModel
<div class="modalform modal fade" id="AddUpdatePayModal" role="dialog" aria-labelledby="modal-default" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Add Pay</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            @using (Html.BeginForm(null, null, null, FormMethod.Post, new { @class = "form-horizontal", data_bind = "submit: validateAndAddPay" }))
            {
            <div class="modal-body">

                @Html.ValidationSummary()
                <div class="row">
                    <div class="col-4">
                        <div class="form-group">
                            @Html.LabelFor(x => x.GLCode)
                            @Html.DropDownListFor(x => x.GLCode, Enumerable.Empty<SelectListItem>(), null, new { @class = "form-control select2", style = "width:100%", data_bind = "options: GLCodes, optionsText: 'Text', optionsValue: 'Value', value: CashSalesPay.gLCode,optionsCaption: 'Select GL Code'" })
                        </div>
                    </div>
                    <div class="col-4">
                        <div class="form-group">
                            @Html.LabelFor(x => x.PaymentType)
                            @Html.DropDownListFor(x => x.PaymentType, Enumerable.Empty<SelectListItem>(), null, new { @class = "form-control select2", style = "width:100%", data_bind = "options: PaymentTypes, optionsText: 'Text', optionsValue: 'Value', value: CashSalesPay.paymentType,optionsCaption: 'Select Payment Type'" })
                        </div>
                    </div>
                    <div class="col-4">
                        <div class="form-group">
                            @Html.LabelFor(x => x.PaidAmount)
                            @Html.TextBoxFor(x => x.PaidAmount, new { @class = "form-control", data_bind = "textInput: CashSalesPay.paidAmount" })

                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-4">
                        <div class="form-group">
                            @Html.LabelFor(x => x.ChequeNoReference)
                            @Html.TextBoxFor(x => x.ChequeNoReference, new { @class = "form-control", data_bind = "value: CashSalesPay.chequeNoReference" })
                        </div>
                    </div>
                    <div class="col-4">
                        <div class="form-group">
                            @Html.LabelFor(x => x.PaymentRemarks)
                            @Html.TextBoxFor(x => x.PaymentRemarks, new { @class = "form-control", data_bind = "value: CashSalesPay.paymentRemarks" })
                        </div>
                    </div>
                    <div class="col-4">
                        <div class="form-group">
                            @Html.Label("Balance")
                            @Html.TextBox("Balance", null, new { @class = "form-control", data_bind = " value: BalancePay", style = "text-align: right; ", disabled = "" })
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-4">
                        <div class="form-group">
                            @Html.LabelFor(x => x.PayLocation)
                            @Html.DropDownListFor(x => x.PayLocation, Enumerable.Empty<SelectListItem>(), null, new { @class = "form-control select2", style = "width:100%", data_bind = "options: LocationCodeAndNames, optionsText: 'Text', optionsValue: 'Value', value: CashSalesPay.payLocation,optionsCaption: 'Select Payment Location'" })
                        </div>
                    </div>
                    <div class="col-4">
                       
                    </div>
                    <div class="col-4">
                        <div class="form-group">
                            @Html.Label("Total")
                            @Html.TextBox("Grand Total", null, new { @class = "form-control", data_bind = "value: CashSales.grandTotal", style = "text-align: right; ", disabled = "" })
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                    <button type="button" class="btn btn-default mr-auto" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Save</button>
            </div>
                }
            </div>
    </div>
</div>


