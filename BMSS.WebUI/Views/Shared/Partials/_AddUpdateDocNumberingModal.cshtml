@using BMSS.WebUI.Models.DocNumberingViewModels
@model AddUpdateDocNumberingViewModel
@{


    AjaxOptions ajaxOpts = new AjaxOptions
    {
        OnSuccess = "AjaxFormSuccessModal('" + Model.AjaxOptions.AddActionTargetId + "', '" + Model.AjaxOptions.AddFormId + "','" + Model.AjaxOptions.ModalID + "', data)",
        Url = Url.Action(Model.AjaxOptions.FormAddAction),
        HttpMethod = "POST"
    };
}
<div class="modalform modal fade" id="@Model.AjaxOptions.ModalID" role="dialog" aria-labelledby="modal-default" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Add Numbering</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            @using (Ajax.BeginForm(Model.AjaxOptions.FormAddAction, null, ajaxOpts, new { id = Model.AjaxOptions.AddFormId }))
            {
            <div class="modal-body">

                @Html.ValidationSummary()
                @Html.AntiForgeryToken()
                @Html.HiddenFor(x => x.NumberingID)

                <div class="row">
                    <div class="col-sm-12 col-md-6 col-lg-6 col-xl-6">
                        <div class="form-group">
                            @Html.LabelFor(x => x.SeriesName, new { @class = "col-form-label" })
                            @Html.TextBoxFor(x => x.SeriesName, new { @class = "form-control", placeholder = Html.DisplayNameFor(x => x.SeriesName) })
                        </div>
                    </div>
                    <div class="col-sm-12 col-md-6 col-lg-6 col-xl-6">
                        <div class="form-group">
                            @Html.LabelFor(x => x.Prefix, new { @class = "col-form-label" })
                            @Html.TextBoxFor(x => x.Prefix, new { @class = "form-control", placeholder = Html.DisplayNameFor(x => x.Prefix) })
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12 col-md-6 col-lg-6 col-xl-6">
                        <div class="form-group">
                            @Html.LabelFor(x => x.FirstNo, new { @class = "col-form-label" })
                            @Html.TextBoxFor(x => x.FirstNo, new { @class = "form-control", placeholder = Html.DisplayNameFor(x => x.FirstNo) })
                        </div>
                    </div>
                    <div class="col-sm-12 col-md-6 col-lg-6 col-xl-6">
                        <div class="form-group">
                            @Html.LabelFor(x => x.LastNo, new { @class = "col-form-label" })
                            @Html.TextBoxFor(x => x.LastNo, new { @class = "form-control", placeholder = Html.DisplayNameFor(x => x.LastNo) })
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12 col-md-6 col-lg-6 col-xl-6">
                        <div class="form-group">
                            @Html.LabelFor(x => x.IsDefault, new { @class = "col-form-label" })
                            @Html.EditorFor(x => x.IsDefault, new { @class = "form-control", placeholder = Html.DisplayNameFor(x => x.IsDefault) })
                        </div>
                    </div>
                    <div class="col-sm-12 col-md-6 col-lg-6 col-xl-6">
                       
                    </div>
                </div>

            </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default mr-auto" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            }
        </div>
    </div>
</div>



