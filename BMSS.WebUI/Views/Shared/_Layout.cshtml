@{
    var companyFullName = System.Configuration.ConfigurationManager.AppSettings["CompanyFullName"];
    var companyShortName = System.Configuration.ConfigurationManager.AppSettings["CompanyShortName"];
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>@ViewBag.Title - @companyFullName Sales System</title>
    @Styles.Render("~/Bootstrap-css")
    @Styles.Render("~/Font-awesome-css")
    @Styles.Render("~/Ionicons")
    @RenderSection("Styles", false)
    @Styles.Render("~/OwnCss")

</head>

<body class="hold-transition skin-blue sidebar-mini">
    <div class="wrapper">
        <header class="main-header">
            <a href='@Url.Action("Index", "Home")' class="logo">
                @*<span class="logo-mini"><b>B</b>m</span>
                    <span class="logo-lg"><b>Build</b>mATE</span>*@
                <span class="logo-mini"><b>@companyShortName</b></span>
                <span class="logo-lg"><b>@companyFullName</b></span>
            </a>
            <nav class="navbar fixed-top navbar-custom" role="navigation">
                <a href="#" class="sidebar-toggle" data-toggle="push-menu" role="button">
                    <span class="sr-only">Toggle navigation</span>
                </a>
                <div class="navbar-custom-menu">
                    <ul class="nav navbar-nav">
                        <li class="dropdown user user-menu">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                <img src="@Url.Content("~/Content/img/user2-160x160.jpg")" class="user-image" alt="User Image">
                                <span class="hidden-xs">@User.Identity.Name</span>
                            </a>
                            <ul class="dropdown-menu">
                                <li class="user-header">
                                    <img src="@Url.Content("~/Content/img/user2-160x160.jpg")" class="rounded-circle" alt="User Image">
                                    <p>
                                        @User.Identity.Name - Web Developer
                                        <small>Member since Nov. 2012</small>
                                    </p>
                                </li>
                                <li class="user-body">
                                    <div class="row">
                                        <div class="col text-center">
                                            <a href="#">Followers</a>
                                        </div>
                                        <div class="col text-center">
                                            <a href="#">Sales</a>
                                        </div>
                                        <div class="col text-center">
                                            <a href="#">Friends</a>
                                        </div>
                                    </div>
                                </li>
                                <li class="user-footer">
                                    <div class="pull-left">
                                        <a href="#" class="btn btn-default btn-flat">Profile</a>
                                    </div>
                                    @using (Html.BeginForm("Logout", "Account", FormMethod.Post, new { id = "logoutForm" }))
                                    {
                                        @Html.AntiForgeryToken()
                                        <div class="pull-right">
                                            <a href="javascript:document.getElementById('logoutForm').submit()" Class="btn btn-default btn-flat">Sign out</a>
                                        </div>
                                    }
                                </li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </nav>
        </header>
        <aside class="main-sidebar">
            <section class="sidebar">
                <div class="user-panel">
                    <div class="pull-left image">
                        <img src="@Url.Content("~/Content/img/user2-160x160.jpg")" class="rounded-circle" alt="User Image">
                    </div>
                    <div class="pull-left info">
                        <p>@User.Identity.Name</p>
                        <a href="#"><i class="fa fa-circle text-success"></i> Online</a>
                    </div>
                </div>
                @Html.SiteMenuLinks()
            </section>
        </aside>
        <div class="content-wrapper">
            @RenderSection("Content_Header", false)
            <section class="content">
                @if (TempData["GlobalSuccessMsg"] != null)
                {
                    <div class="alert alert-success alert-dismissible" id="GlobalSuccessMsg">
                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                        <h4><i class="icon fa fa-check"></i>Success!</h4>
                        @TempData["message"]
                    </div>
                }
                @if (TempData["GlobalErrMsg"] != null)
                {
                    <div class="alert alert-danger alert-dismissible" id="GlobalErrMsg">
                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                        <h4><i class="icon fa fa-ban"></i>Alert!</h4>
                        @TempData["GlobalErrMsg"]
                    </div>
                }
                @RenderBody()
            </section>

        </div>
        <footer class="main-footer">
            <div class="pull-right hidden-xs">
                Powered by Integrated Information Systems (P) Ltd.
            </div>
            <strong>Copyright &copy; @DateTime.Now.Year <a href="#">BuildMate</a>.</strong> All rights reserved.
        </footer>
    </div>
    @RenderSection("BootModals", false)
    @Scripts.Render("~/Jquery")
    @Scripts.Render("~/Bootstrap")
    @Scripts.Render("~/AdminLTE")
    @Scripts.Render("~/GeneralJs")
    @RenderSection("Scripts", false)
</body>
</html>