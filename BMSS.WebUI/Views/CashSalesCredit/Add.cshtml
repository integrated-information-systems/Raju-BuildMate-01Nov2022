@section Scripts {
    @Scripts.Render("~/DataTables")
    @Scripts.Render("~/bundles/Jquery-Validation-and-Ajax")
    @Scripts.Render("~/Select2")
    @Scripts.Render("~/DatePickerJS")
    @Scripts.Render("~/Knockout")

    <script>
        function CashSalesCreditViewModel(cashSalesCredit) {
            var self = this;
            self.isCreating = cashSalesCredit.docNum == "New";
            self.previewUrl = ko.observable('@Url.Action("CSCViewer.aspx", "WForms/", new { id = Model.DocEntry })');
            // Loaded from ajax - Observable Arrays
            self.CashCustomerNameCodes = ko.observableArray();
            self.CustomerContactPersons = ko.observableArray();
            self.ChildItemDetails = ko.observableArray();
            self.CustomerNameCodes = ko.observableArray();

            self.GLCodes = ko.observableArray();
            self.PaymentTypes = ko.observableArray();
            self.isDisabled = ko.observable(false);
            self.isDisabledResubmit = ko.observable(true);

            self.isEditingLine = false; // To prevent unit price change while clicking Edit line Button for the first time

            self.SalesPersons = ko.observableArray();
            self.ItemCodesAndNames = ko.observableArray();
            self.LocationCodeAndNames = ko.observableArray();
            self.TaxCodes = ko.observableArray();

            self.CustomerShipToAddresses = ko.observableArray();
            self.CustomerBillToAddresses = ko.observableArray();

            var LoadingFinished = true;
            if (!self.isCreating) {
                LoadingFinished = false;
            }
            self.CopyDescToOwDesc = function () {
                self.CashSalesCreditLine.overwriteDescription($('#AddUpdateItemModal').find("#Description:first").find("option:selected").text());
            }

            self.LoadCustomerBasedDropdowns = function (cardcode) {
                    $.when(
                    // Initial Ajax Requests, while page loading
                    //Load Customer's ContactPersons
                    @*$.ajax({
                        url: "@Url.Action("GetContactPersons", "ContactPersons", null)",
                        type: 'post',
                        contentType: 'application/x-www-form-urlencoded',
                        data: ko.toJS({ CardCode: cardcode }),
                        success: function (data) {
                            self.CustomerContactPersons(data);

                        },
                        error: function () { }
                    }),*@
                    //Load Shipping Addresses
                    $.ajax({
                        url: "@Url.Action("GetCustomerShippingAddresses", "CustomerAddress", null)",
                        type: 'post',
                        contentType: 'application/x-www-form-urlencoded',
                        data: ko.toJS({ CardCode: cardcode }),
                        success: function (data) {

                            self.CustomerShipToAddresses(data);

                        },
                        error: function () { }
                    }),
                    //Load Billing Addresses
                    $.ajax({
                        url: "@Url.Action("GetCustomerBillingAddresses", "CustomerAddress", null)",
                        type: 'post',
                        contentType: 'application/x-www-form-urlencoded',
                        data: ko.toJS({ CardCode: cardcode }),
                        success: function (data) {

                            self.CustomerBillToAddresses(data);
                        },
                        error: function () { }
                    })
                    ).done(function () {

                            if (LoadingFinished === false) {


                                self.CashSalesCredit.billTo(cashSalesCredit.billTo);
                                $('#BillTo').val(cashSalesCredit.billTo).trigger('change');
                                self.CashSalesCredit.shipTo(cashSalesCredit.shipTo);
                                $('#ShipTo').val(cashSalesCredit.shipTo).trigger('change');

                                $.ajax({
                                                url: "@Url.Action("GetCustomerDetails", "Customer", null)",
                                                type: 'post',
                                                contentType: 'application/x-www-form-urlencoded',
                                                    data: ko.toJS({ CardCode: cardcode }),
                                success: function (data) {                                                                                                         
                                                    $('#GstName').val(data.DefaultTaxGroup).trigger('change');                                                                                       
                                                },
                                                error: function () { }
                                            });


                                LoadingFinished = true;
                            }
                        else {
                            $.ajax({
                                                url: "@Url.Action("GetCustomerDetails", "Customer", null)",
                                                type: 'post',
                                                contentType: 'application/x-www-form-urlencoded',
                                                    data: ko.toJS({ CardCode: cardcode }),
                                                success: function (data) {

                                                    var PaymentTermsDays = parseInt(data.PaymentTermDays);
                                                    
                                                    self.CashSalesCredit.officeTelNo(data.OfficeTelNo);

                                                    self.CashSalesCredit.currency(data.Currency);

                                                   
                                                    self.CashSalesCredit.slpName(data.SlpName);


                                                    let BillToDefVal = data.BillToDef;
                                                    $('#BillTo').val("").trigger('change');
                                                    $('#BillTo').val(BillToDefVal).trigger('change');

                                                    let ShipToDefVal = data.ShipToDef;
                                                    $('#ShipTo').val("").trigger('change');
                                                    $('#ShipTo').val(ShipToDefVal).trigger('change');


                                                    $('#GstName').val(data.DefaultTaxGroup).trigger('change');




                                                },
                                                error: function () { }
                                            });
                        }


                });
            };

            // Model Binding
            self.CashSalesCredit = {                
                docNum: ko.observable(cashSalesCredit.docNum),
                cardCode: ko.observable(cashSalesCredit.cardCode),
                paymentLocation: ko.observable(cashSalesCredit.paymentLocation),
                cardName: ko.observable(cashSalesCredit.cardName),
                currency: ko.observable(cashSalesCredit.currency),
                officeTelNo: ko.observable(cashSalesCredit.officeTelNo),
                printedStatus: ko.observable(cashSalesCredit.printedStatus),       
                cashSalesCardName: ko.observable(cashSalesCredit.cashSalesCardName),
                docDate: ko.observable(cashSalesCredit.docDate),
                dueDate: ko.observable(cashSalesCredit.dueDate),
                deliveryDate: ko.observable(cashSalesCredit.deliveryDate),
                customerRef: ko.observable(cashSalesCredit.customerRef),
                poNo: ko.observable(cashSalesCredit.poNo),
                sRINo: ko.observable(cashSalesCredit.sRINo),
                paymentTermName: ko.observable(cashSalesCredit.paymentTermName),
                slpName: ko.observable(cashSalesCredit.slpName),
                exRate: ko.observable(cashSalesCredit.exRate),                
                headerRemarks1: ko.observable(cashSalesCredit.headerRemarks1),
                headerRemarks2: ko.observable(cashSalesCredit.headerRemarks2),
                headerRemarks3: ko.observable(cashSalesCredit.headerRemarks3),
                headerRemarks4: ko.observable(cashSalesCredit.headerRemarks4),
                footerRemarks1: ko.observable(cashSalesCredit.footerRemarks1),
                footerRemarks2: ko.observable(cashSalesCredit.footerRemarks2),
                footerRemarks3: ko.observable(cashSalesCredit.footerRemarks3),
                footerRemarks4: ko.observable(cashSalesCredit.footerRemarks4),
                billTo: ko.observable(cashSalesCredit.billTo),
                billToAddress1: ko.observable(cashSalesCredit.billToAddress1),
                billToAddress2: ko.observable(cashSalesCredit.billToAddress2),
                billToAddress3: ko.observable(cashSalesCredit.billToAddress3),
                billToAddress4: ko.observable(cashSalesCredit.billToAddress4),
                billToAddress5: ko.observable(cashSalesCredit.billToAddress5),
                shipTo: ko.observable(cashSalesCredit.shipTo),
                shipToAddress1: ko.observable(cashSalesCredit.shipToAddress1),
                shipToAddress2: ko.observable(cashSalesCredit.shipToAddress2),
                shipToAddress3: ko.observable(cashSalesCredit.shipToAddress3),
                shipToAddress4: ko.observable(cashSalesCredit.shipToAddress4),
                shipToAddress5: ko.observable(cashSalesCredit.shipToAddress5),
                //selfCollect: ko.observable(cashSalesCredit.selfCollect),
                //selfCollectRemarks1: ko.observable(cashSalesCredit.selfCollectRemarks1),
                //selfCollectRemarks2: ko.observable(cashSalesCredit.selfCollectRemarks2),
                //selfCollectRemarks3: ko.observable(cashSalesCredit.selfCollectRemarks3),
                //selfCollectRemarks4: ko.observable(cashSalesCredit.selfCollectRemarks4),
                discByPercent: ko.observable(cashSalesCredit.discByPercent),
                discPercent: ko.observable(cashSalesCredit.discPercent),
                discAmount: ko.observable(cashSalesCredit.discAmount),                
                grandTotal: ko.observable(parseFloat(cashSalesCredit.grandTotal).toFixed(2)),
                submittedToSAP: ko.observable(cashSalesCredit.submittedToSAP),
                syncStatus: ko.observable(cashSalesCredit.syncStatus),
                lines: ko.observableArray(cashSalesCredit.lines),
                noteLines: ko.observableArray(cashSalesCredit.noteLines),
                payLines: ko.observableArray(cashSalesCredit.payLines),
            }

            if (cashSalesCredit.printedStatus === 0) {
                self.CashSalesCredit.printedStatusName = ko.observable('Not Printed');
            }
            else {
                self.CashSalesCredit.printedStatusName = ko.observable('Printed');
            }
            self.CashSalesCredit.printedStatus.subscribe(function (newValue) {
                if (newValue === 0)
                    self.CashSalesCredit.printedStatusName('Not Printed');
                else
                    self.CashSalesCredit.printedStatusName('Printed');
            })
            self.printPreview = function () {
                 $.ajax({
                url: "@Url.Action("CanPrint", "CashSalesCredit", null)",
                type: 'post',
                contentType: 'application/x-www-form-urlencoded',
                data: ko.toJS({ DocEntry: @Model.DocEntry }),
                success: function (data)
                {
                    if (data.canAccess) {                       
                        self.CashSalesCredit.printedStatus(1);
                        window.open(self.previewUrl(), '_blank');             
                    }
                    else {                        
                        let form = $('form[id="CashSalesCreditForm"]');
                        window.scrollTo({ top: 0, behavior: 'smooth' });
                        $('<div class="alert alert-danger alert-dismissible"><button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button><h4><i class="icon fa fa-ban"></i> Alert!</h4><p>Access denied</p></div>')
                            .prependTo($(form))
                            .delay(5000)
                            .slideUpAndRemove('slow');   
                    }
                            
                },
                error: function ()
                {
                             
                }
                });
             
            }


            self.isDisabled(self.CashSalesCredit.submittedToSAP());
            if (self.CashSalesCredit.syncStatus() == 3) { // Sync Failed
                self.isDisabledResubmit(false);
                if (self.isDisabled() === false) {
                    self.isDisabled(true);
                }
            }
            else {
                self.isDisabledResubmit(true);

            }
            //Total Calculation
            self.CashSalesCredit.netTotal = ko.computed(function () {
                var calculated = 0;
                if (self.CashSalesCredit.lines() !== null) {
                    for (var i = 0; i < self.CashSalesCredit.lines().length; i++) {
                        calculated = calculated + parseFloat(self.CashSalesCredit.lines()[i].lineTotal);
                    }
                }
                if (isNaN(calculated)) {
                    return 0;
                }
                else {
                    return roundToTwo(calculated);
                }
            }, self) //Computed observable
            self.CashSalesCredit.gstTotal = ko.computed(function () {
                var calculated = 0;
                var discAmt = 0;
                var disperc = 0;
                disperc = self.CashSalesCredit.discPercent();
                if (isNaN(disperc)) {
                    disperc = 0
                }
                if (self.CashSalesCredit.lines() !== null) {
                    let lines = ko.toJS(self.CashSalesCredit.lines());
                    let groupedLines = groupBy(lines, 'gstName');

                    Object.keys(groupedLines).forEach(key => {
                        let lineGroupTotal = 0;
                        for (var i = 0; i < groupedLines[key].length; i++) {
                            if (disperc > 0) {
                                discAmt = parseFloat(groupedLines[key][i].lineTotal) * parseFloat(disperc) / 100;
                            }
                            lineGroupTotal = parseFloat(roundToTwo(lineGroupTotal + parseFloat(roundToTwo((parseFloat(groupedLines[key][i].lineTotal) - discAmt)))));
                        }
                        calculated = calculated + (parseFloat(lineGroupTotal) * (parseFloat(groupedLines[key][0].gst) / 100));
                    }); 
                }
                if (isNaN(calculated)) {
                    return 0;
                }
                else {
                    return roundToTwo(calculated);
                }
            }, self) //Computed observable
            self.CashSalesCredit.netTotal.subscribe(function (newValue) {
                self.CalcDiscounts();
            }, self)
            self.CashSalesCredit.discPercent.subscribe(function (newValue) {
                self.CalcDiscounts();
            }, self)
            self.CashSalesCredit.discAmount.subscribe(function (newValue) {
                self.CalcDiscounts();
            }, self)
            self.CashSalesCredit.gstTotal.subscribe(function (newValue) {
                self.CalcTotals();
            }, self)

            self.CalcTotals = function () {
                var GrandTotal = 0;
                if (!isNaN(self.CashSalesCredit.netTotal()) && !isNaN(self.CashSalesCredit.discAmount()) && !isNaN(self.CashSalesCredit.gstTotal())) {
                    GrandTotal = parseFloat(self.CashSalesCredit.netTotal()) - parseFloat(self.CashSalesCredit.discAmount()) + parseFloat(self.CashSalesCredit.gstTotal());

                }
                if (isNaN(GrandTotal)) {
                    self.CashSalesCredit.grandTotal(0);
                }
                else {
                    GrandTotal = parseFloat(GrandTotal).toFixed(2);
                    self.CashSalesCredit.grandTotal(GrandTotal);
                }

            }
            self.CalcDiscounts = function () {

                if (self.CashSalesCredit.discByPercent() === "true") {

                    var calculated = 0;
                    if (!isNaN(self.CashSalesCredit.netTotal()) && !isNaN(self.CashSalesCredit.discPercent())) {
                        calculated = self.CashSalesCredit.netTotal() * (self.CashSalesCredit.discPercent() / 100);
                    }
                    if (isNaN(calculated)) {
                        self.CashSalesCredit.discAmount(0);
                    }
                    else {
                        calculated = roundToTwo(calculated);
                        self.CashSalesCredit.discAmount(calculated);
                    }
                }
                else {

                    var calculated = 0;
                    if (!isNaN(self.CashSalesCredit.netTotal()) && !isNaN(self.CashSalesCredit.discAmount())) {

                        calculated = (self.CashSalesCredit.discAmount() * 100) / self.CashSalesCredit.netTotal();
                    }
                    if (isNaN(calculated)) {
                        self.CashSalesCredit.discPercent(0);
                    }
                    else {
                        calculated = roundToTwo(calculated);
                        self.CashSalesCredit.discPercent(calculated);
                    }
                }

                self.CalcTotals();


            }
            if (!self.isCreating) {
                self.LoadCustomerBasedDropdowns(self.CashSalesCredit.cardCode);
            }



            var originalState = cashSalesCredit;

            //Single CashSalesCreditLine Object Setup
            self.CashSalesCreditLine = {
                lineNum: ko.observable(),
                itemCode: ko.observable(),
                description: ko.observable(),
                overwriteDescription: ko.observable(),
                description2: ko.observable(),
                description3: ko.observable(),
                description4: ko.observable(),
                description5: ko.observable(),
                description6: ko.observable(),
                serialNumber: ko.observable(),
                qty: ko.observable(),
                location: ko.observable(),
                locationText: '',
                unitPrice: ko.observable(),
                unitCost: ko.observable(),
                gstName: ko.observable(),
                gst: '',
            }
            //Single CashSalesCreditNote Object Setup
            self.CashSalesCreditNote = {
                lineNum: ko.observable(),
                note: ko.observable(),
            }
            //Single CashSalesCreditPay Object Setup
            self.CashSalesCreditPay = {
                lineNum: ko.observable(),
                gLCode: ko.observable(),
                gLName: ko.observable(),
                paymentType: ko.observable(),
                paidAmount: ko.observable(),
                paymentRemarks: ko.observable(),
                chequeNoReference: ko.observable(),
                payLocation: ko.observable(),
            }
            self.CashSalesCreditLine.lineTotal = ko.computed(function () {
                var calculated = parseFloat(self.CashSalesCreditLine.qty()) * parseFloat(self.CashSalesCreditLine.unitPrice());
                if (isNaN(calculated)) {
                    return 0;
                }
                else {
                    return roundToTwo(calculated);
                }
            }, self) //Computed observable


            // Add/Update/Delete CashSalesCredit Lines
            self.validateAndAddline = function (form) {
                if (!$(form).valid()) {
                    $('#AddUpdateItemModal').scrollTop(0);
                }
                else {
                    var lineNum = 0;
                    if (self.CashSalesCredit.lines() !== null) {
                        lineNum = self.CashSalesCredit.lines().length;
                    }

                    // Remove All li before submission, which he had in the previous validation
                    $(form).find(".validation-summary-errors ul li").remove();
                    $(form).find(".validation-summary-valid ul li").remove();
                    var InputDescription = $(form).find("#Description:first").find("option:selected").text();
                    var LocationText = $(form).find("#Location:first").find("option:selected").text();
                    var GstValue = 0;
                    for (var i = 0; i < self.TaxCodes.length; i++) {
                        if (self.TaxCodes[i].Text === self.CashSalesCreditLine.gstName()) {
                            GstValue = self.TaxCodes[i].Value;
                        }
                    }

                    if (self.CashSalesCreditLine.lineNum() === "") {
                        self.CashSalesCredit.lines.push({
                            lineNum: lineNum,
                            itemCode: self.CashSalesCreditLine.itemCode(),
                            description: InputDescription,
                            overwriteDescription: self.CashSalesCreditLine.overwriteDescription(),
                            description2: self.CashSalesCreditLine.description2(),
                            description3: self.CashSalesCreditLine.description3(),
                            description4: self.CashSalesCreditLine.description4(),
                            description5: self.CashSalesCreditLine.description5(),
                            description6: self.CashSalesCreditLine.description6(),
                            serialNumber: self.CashSalesCreditLine.serialNumber(),
                            qty: parseFloat(self.CashSalesCreditLine.qty()).toFixed(3),
                            location: self.CashSalesCreditLine.location(),
                            locationText: LocationText,
                            unitPrice: parseFloat(self.CashSalesCreditLine.unitPrice()).toFixed(4),
                            unitCost: parseFloat(self.CashSalesCreditLine.unitCost()).toFixed(4),
                            gstName: self.CashSalesCreditLine.gstName(),
                            gst: GstValue,
                            lineTotal: parseFloat(self.CashSalesCreditLine.lineTotal()).toFixed(2),
                        });
                    }
                    else {
                        var LineIndex = parseInt(self.CashSalesCreditLine.lineNum());

                        self.CashSalesCredit.lines.replace(self.CashSalesCredit.lines()[LineIndex], {
                            lineNum: self.CashSalesCreditLine.lineNum(),
                            itemCode: self.CashSalesCreditLine.itemCode(),
                            description: InputDescription,
                            overwriteDescription: self.CashSalesCreditLine.overwriteDescription(),
                            description2: self.CashSalesCreditLine.description2(),
                            description3: self.CashSalesCreditLine.description3(),
                            description4: self.CashSalesCreditLine.description4(),
                            description5: self.CashSalesCreditLine.description5(),
                            description6: self.CashSalesCreditLine.description6(),
                            serialNumber: self.CashSalesCreditLine.serialNumber(),
                            qty: parseFloat(self.CashSalesCreditLine.qty()).toFixed(3),
                            location: self.CashSalesCreditLine.location(),
                            locationText: LocationText,
                            unitPrice: parseFloat(self.CashSalesCreditLine.unitPrice()).toFixed(4),
                            unitCost: parseFloat(self.CashSalesCreditLine.unitCost()).toFixed(4),
                            gstName: self.CashSalesCreditLine.gstName(),
                            gst: GstValue,
                            lineTotal: parseFloat(self.CashSalesCreditLine.lineTotal()).toFixed(2),
                        });
                    }
                }
            }
            self.editCashSalesCreditLine = function (rowid, data, event) {

                var clickedRowId = parseInt(rowid);
                if (clickedRowId < self.CashSalesCredit.lines().length) {
                    self.CashSalesCreditLine.lineNum(clickedRowId);

                    self.isEditingLine = true;

                    var itemcode = self.CashSalesCredit.lines()[clickedRowId].itemCode;
                    $('#ItemCode').val(itemcode).trigger('change');

                    self.CashSalesCreditLine.itemCode(itemcode);
                    self.CashSalesCreditLine.description(itemcode);
                    self.CashSalesCreditLine.overwriteDescription(self.CashSalesCredit.lines()[clickedRowId].overwriteDescription);
                    self.CashSalesCreditLine.description2(self.CashSalesCredit.lines()[clickedRowId].description2);
                    self.CashSalesCreditLine.description3(self.CashSalesCredit.lines()[clickedRowId].description3);
                    self.CashSalesCreditLine.description4(self.CashSalesCredit.lines()[clickedRowId].description4);
                    self.CashSalesCreditLine.description5(self.CashSalesCredit.lines()[clickedRowId].description5);
                    self.CashSalesCreditLine.description6(self.CashSalesCredit.lines()[clickedRowId].description6);
                    self.CashSalesCreditLine.serialNumber(self.CashSalesCredit.lines()[clickedRowId].serialNumber);
                    self.CashSalesCreditLine.qty(parseFloat(self.CashSalesCredit.lines()[clickedRowId].qty).toFixed(3));

                    var location = self.CashSalesCredit.lines()[clickedRowId].location;
                    self.CashSalesCreditLine.location(location);
                    $('#Location').val(location).trigger('change');

                    self.CashSalesCreditLine.unitPrice(parseFloat(self.CashSalesCredit.lines()[clickedRowId].unitPrice).toFixed(4));
                    self.CashSalesCreditLine.unitCost(parseFloat(self.CashSalesCredit.lines()[clickedRowId].unitCost).toFixed(4));
                    var gstName = self.CashSalesCredit.lines()[clickedRowId].gstName;
                    self.CashSalesCreditLine.gstName(gstName);
                    $('#GstName').val(gstName).trigger('change');

                    //self.CashSalesCreditLine.lineTotal(self.CashSalesCreditLine.lineTotal); //Computed automatically
                    $('#AddUpdateItemModal').modal('show');
                }
            }
            self.addCashSalesCreditLine = function () {
                
                $('#AddUpdateItemModal').modal('show');
                self.InitializeCashSalesCreditLine();
            }
            self.deleteCashSalesCreditLine = function (rowid, data, event) {
                var clickedRowId = parseInt(rowid);

                if (clickedRowId < self.CashSalesCredit.lines().length) {
                    self.CashSalesCredit.lines.remove(self.CashSalesCredit.lines()[clickedRowId]);

                }


                var table = $('#ItemListTable').DataTable();

                if (self.CashSalesCredit.lines().length > 0) {
                    table.clear();

                    var i;
                    for (i = 0; i < self.CashSalesCredit.lines().length; i++) {
                        var AddtionalRemarks = '';
                        var defaultDescription = '-';
                        if (self.CashSalesCredit.lines()[i].overwriteDescription === null) {
                            defaultDescription = self.CashSalesCredit.lines()[i].description;
                        }
                        else if (self.CashSalesCredit.lines()[i].overwriteDescription === "") {
                            defaultDescription = self.CashSalesCredit.lines()[i].description;
                        }
                        else {
                            defaultDescription = self.CashSalesCredit.lines()[i].overwriteDescription;
                        }
                        if (self.CashSalesCredit.lines()[i].description2 !== null) {
                            if (self.CashSalesCredit.lines()[i].description2 !== "") {
                                AddtionalRemarks = AddtionalRemarks + self.CashSalesCredit.lines()[i].description2 + "<br/>"
                            }
                        }
                        if (self.CashSalesCredit.lines()[i].description3 !== null) {
                            if (self.CashSalesCredit.lines()[i].description3 !== "") {
                                AddtionalRemarks = AddtionalRemarks + self.CashSalesCredit.lines()[i].description3 + "<br/>"
                            }
                        }
                        if (self.CashSalesCredit.lines()[i].description4 !== null) {
                            if (self.CashSalesCredit.lines()[i].description4 !== "") {
                                AddtionalRemarks = AddtionalRemarks + self.CashSalesCredit.lines()[i].description4 + "<br/>"
                            }
                        }
                        if (self.CashSalesCredit.lines()[i].description5 !== null) {
                            if (self.CashSalesCredit.lines()[i].description5 !== "") {
                                AddtionalRemarks = AddtionalRemarks + self.CashSalesCredit.lines()[i].description5 + "<br/>"
                            }
                        }
                        if (self.CashSalesCredit.lines()[i].description6 !== null) {
                            if (self.CashSalesCredit.lines()[i].description6 !== "") {
                                AddtionalRemarks = AddtionalRemarks + self.CashSalesCredit.lines()[i].description6 + "<br/>"
                            }
                        }
                        defaultDescription = defaultDescription + "<span data-toggle='popover' data-trigger='hover' data-placement='top' data-html='true' data-content='" + AddtionalRemarks + "' data-title='Additional Remarks'><i class='fa fa-fw fa-info-circle'></i></span>";

                        var rowNode = table.row.add([
                            i + 1,
                            self.CashSalesCredit.lines()[i].itemCode,
                            defaultDescription,
                            self.CashSalesCredit.lines()[i].qty,
                            self.CashSalesCredit.lines()[i].locationText,
                            self.CashSalesCredit.lines()[i].unitPrice,
                            self.CashSalesCredit.lines()[i].gstName,
                            self.CashSalesCredit.lines()[i].lineTotal,
                            "<button type='button' class='btn btn-danger btn-xs' data-bind ='event: { click: function(rowid, data, event) { deleteCashSalesCreditLine("
                            + i + ", data, event) } }'><i class='fa fa-fw fa-remove'></i></button>"
                        ]).draw().node();
                        $(rowNode).attr("data-bind", "event: { dblclick: function(rowid, data, event) { editCashSalesCreditLine(" + i + ", data, event) } }");
                        ko.applyBindings(self, rowNode);
                    }

                }
                else {
                    table.clear().draw();
                }



                ////Deletes Row from html table and by calling draw datatable will be redrawn
                //var table = $('#ItemListTable').DataTable();
                //table.row(clickedRowId).remove().draw();

            }
            self.InitializeCashSalesCreditLine = function () {
                self.CashSalesCreditLine.lineNum('');
                self.CashSalesCreditLine.itemCode('');
                self.CashSalesCreditLine.description('');
                self.CashSalesCreditLine.overwriteDescription('');
                self.CashSalesCreditLine.description2('');
