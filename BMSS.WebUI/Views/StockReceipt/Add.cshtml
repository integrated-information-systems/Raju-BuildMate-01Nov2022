@section Scripts {
    @Scripts.Render("~/DataTables")
    @Scripts.Render("~/bundles/Jquery-Validation-and-Ajax")
    @Scripts.Render("~/Select2")
    @Scripts.Render("~/DatePickerJS")
    @Scripts.Render("~/Knockout")

    <script>
        function StockReceiptViewModel(sR) {
            var self = this;
            self.isCreating = sR.docNum == "New";
            self.previewUrl = ko.observable('@Url.Action("SRViewer.aspx", "WForms/", new { id = Model.DocEntry })');

            // Loaded from ajax - Observable Arrays
            self.isDisabled = ko.observable(false);
            self.isDisabledResubmit = ko.observable(true);

            self.ItemCodesAndNames = ko.observableArray();
            self.LocationCodeAndNames = ko.observableArray();
            self.ChildItemDetails = ko.observableArray();

            self.CopyDescToOwDesc = function () {
                self.StockReceiptLine.overwriteDescription($('#AddUpdateItemModal').find("#Description:first").find("option:selected").text());
            }

            // Model Binding
            self.StockReceipt = {              
                docNum: ko.observable(sR.docNum),
                docDate: ko.observable(sR.docDate),
                ref: ko.observable(sR.ref),
                printedStatus: ko.observable(sR.printedStatus), 
                submittedToSAP: ko.observable(sR.submittedToSAP),
                syncedToSAP: ko.observable(sR.syncedToSAP),
                syncStatus: ko.observable(sR.syncStatus),
                lines: ko.observableArray(sR.lines),
                noteLines: ko.observableArray(sR.noteLines),
            }

            if (sR.printedStatus === 0) {
                self.StockReceipt.printedStatusName = ko.observable('Not Printed');
            }
            else {
                self.StockReceipt.printedStatusName = ko.observable('Printed');
            }
            self.StockReceipt.printedStatus.subscribe(function (newValue) {
                if (newValue === 0)
                    self.StockReceipt.printedStatusName('Not Printed');
                else
                    self.StockReceipt.printedStatusName('Printed');
            })
            self.printPreview = function () {
              
                $.ajax({
                url: "@Url.Action("CanPrint", "StockReceipt", null)",
                type: 'post',
                contentType: 'application/x-www-form-urlencoded',
                data: { DocEntry: @Model.DocEntry },
                success: function (data)
                {
                    if (data.canAccess) {                       
                        self.StockReceipt.printedStatus(1);
                        window.open(self.previewUrl(), '_blank');
                    }
                    else {                        
                        let form = $('form[id="StockReceiptForm"]');
                        window.scrollTo({ top: 0, behavior: 'smooth' });
                        $('<div class="alert alert-danger alert-dismissible"><button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button><h4><i class="icon fa fa-ban"></i> Alert!</h4><p>Access denied</p></div>')
                            .prependTo($(form))
                            .delay(5000)
                            .slideUpAndRemove('slow');   
                    }
                            
                },
                error: function ()
                {
                             
                }
                });
            }


            self.isDisabled(self.StockReceipt.submittedToSAP());
            if (self.isDisabled() === false) {
                self.isDisabled(self.StockReceipt.syncedToSAP());
            }
            if (self.StockReceipt.syncStatus() == 3) { // Sync Failed
                self.isDisabledResubmit(false);
                if (self.isDisabled() === false) {
                    self.isDisabled(true);
                }
            }
            else {
                self.isDisabledResubmit(true);

            }
            var originalState = sR;

            //Single StockReceiptLine Object Setup
            self.StockReceiptLine = {
                lineNum: ko.observable(),
                itemCode: ko.observable(),
                description: ko.observable(),
                overwriteDescription: ko.observable(),
                description2: ko.observable(),
                description3: ko.observable(),
                description4: ko.observable(),
                description5: ko.observable(),
                description6: ko.observable(),
                serialNumber: ko.observable(),
                qty: ko.observable(),
                location: ko.observable(),
                locationText: '',
                unitPrice: ko.observable(),
            }
            //Single StockReceiptNote Object Setup
            self.StockReceiptNote = {
                lineNum: ko.observable(),
                note: ko.observable(),
            }
            self.StockReceiptLine.lineTotal = ko.computed(function () {
                var calculated = parseFloat(self.StockReceiptLine.qty()) * parseFloat(self.StockReceiptLine.unitPrice());
                if (isNaN(calculated)) {
                    return 0;
                }
                else {
                    return roundToTwo(calculated);
                }
            }, self) //Computed observable


            // Add/Update/Delete StockReceipt Lines
            self.validateAndAddline = function (form) {
                if (!$(form).valid()) {
                    $('#AddUpdateItemModal').scrollTop(0);
                }
                else {
                    var lineNum = 0;
                    if (self.StockReceipt.lines() !== null) {
                        lineNum = self.StockReceipt.lines().length;
                    }

                    // Remove All li before submission, which he had in the previous validation
                    $(form).find(".validation-summary-errors ul li").remove();
                    $(form).find(".validation-summary-valid ul li").remove();
                    var InputDescription = $(form).find("#Description:first").find("option:selected").text();
                    var LocationText = $(form).find("#Location:first").find("option:selected").text();


                    if (self.StockReceiptLine.lineNum() === "") {
                        self.StockReceipt.lines.push({
                            lineNum: lineNum,
                            itemCode: self.StockReceiptLine.itemCode(),
                            description: InputDescription,
                            overwriteDescription: self.StockReceiptLine.overwriteDescription(),
                            description2: self.StockReceiptLine.description2(),
                            description3: self.StockReceiptLine.description3(),
                            description4: self.StockReceiptLine.description4(),
                            description5: self.StockReceiptLine.description5(),
                            description6: self.StockReceiptLine.description6(),
                            serialNumber: self.StockReceiptLine.serialNumber(),
                            qty: parseFloat(self.StockReceiptLine.qty()).toFixed(3),
                            location: self.StockReceiptLine.location(),
                            locationText: LocationText,
                            unitPrice: parseFloat(self.StockReceiptLine.unitPrice()).toFixed(4),

                        });
                    }
                    else {
                        var LineIndex = parseInt(self.StockReceiptLine.lineNum());

                        self.StockReceipt.lines.replace(self.StockReceipt.lines()[LineIndex], {
                            lineNum: self.StockReceiptLine.lineNum(),
                            itemCode: self.StockReceiptLine.itemCode(),
                            description: InputDescription,
                            overwriteDescription: self.StockReceiptLine.overwriteDescription(),
                            description2: self.StockReceiptLine.description2(),
                            description3: self.StockReceiptLine.description3(),
                            description4: self.StockReceiptLine.description4(),
                            description5: self.StockReceiptLine.description5(),
                            description6: self.StockReceiptLine.description6(),
                            serialNumber: self.StockReceiptLine.serialNumber(),
                            qty: parseFloat(self.StockReceiptLine.qty()).toFixed(3),
                            location: self.StockReceiptLine.location(),
                            locationText: LocationText,
                            unitPrice: parseFloat(self.StockReceiptLine.unitPrice()).toFixed(4),

                        });
                    }
                }
            }
            self.editStockReceiptLine = function (rowid, data, event) {

                var clickedRowId = parseInt(rowid);
                if (clickedRowId < self.StockReceipt.lines().length) {
                    self.StockReceiptLine.lineNum(clickedRowId);

                    var itemcode = self.StockReceipt.lines()[clickedRowId].itemCode;
                    $('#ItemCode').val(itemcode).trigger('change');

                    self.StockReceiptLine.itemCode(itemcode);
                    self.StockReceiptLine.description(itemcode);
                    self.StockReceiptLine.overwriteDescription(self.StockReceipt.lines()[clickedRowId].overwriteDescription);
                    self.StockReceiptLine.description2(self.StockReceipt.lines()[clickedRowId].description2);
                    self.StockReceiptLine.description3(self.StockReceipt.lines()[clickedRowId].description3);
                    self.StockReceiptLine.description4(self.StockReceipt.lines()[clickedRowId].description4);
                    self.StockReceiptLine.description5(self.StockReceipt.lines()[clickedRowId].description5);
                    self.StockReceiptLine.description6(self.StockReceipt.lines()[clickedRowId].description6);
                    self.StockReceiptLine.serialNumber(self.StockReceipt.lines()[clickedRowId].serialNumber);
                    self.StockReceiptLine.qty(self.StockReceipt.lines()[clickedRowId].qty);

                    var location = self.StockReceipt.lines()[clickedRowId].location;
                    self.StockReceiptLine.location(location);
                    $('#Location').val(location).trigger('change');

                    self.StockReceiptLine.unitPrice(self.StockReceipt.lines()[clickedRowId].unitPrice);


                    //self.StockReceiptLine.lineTotal(self.StockReceiptLine.lineTotal); //Computed automatically
                    $('#AddUpdateItemModal').modal('show');
                }
            }
            self.addStockReceiptLine = function () {
                $('#AddUpdateItemModal').modal('show');
                self.InitializeStockReceiptLine();
            }
            self.deleteStockReceiptLine = function (rowid, data, event) {
                var clickedRowId = parseInt(rowid);

                if (clickedRowId < self.StockReceipt.lines().length) {
                    self.StockReceipt.lines.remove(self.StockReceipt.lines()[clickedRowId]);

                }


                var table = $('#ItemListTable').DataTable();

                if (self.StockReceipt.lines().length > 0) {
                    table.clear();

                    var i;
                    for (i = 0; i < self.StockReceipt.lines().length; i++) {
                        var AddtionalRemarks = '';
                        var defaultDescription = '-';
                        if (self.StockReceipt.lines()[i].overwriteDescription === null) {
                            defaultDescription = self.StockReceipt.lines()[i].description;
                        }
                        else if (self.StockReceipt.lines()[i].overwriteDescription === "") {
                            defaultDescription = self.StockReceipt.lines()[i].description;
                        }
                        else {
                            defaultDescription = self.StockReceipt.lines()[i].overwriteDescription;
                        }
                        if (self.StockReceipt.lines()[i].description2 !== null) {
                            if (self.StockReceipt.lines()[i].description2 !== "") {
                                AddtionalRemarks = AddtionalRemarks + self.StockReceipt.lines()[i].description2 + "<br/>"
                            }
                        }
                        if (self.StockReceipt.lines()[i].description3 !== null) {
                            if (self.StockReceipt.lines()[i].description3 !== "") {
                                AddtionalRemarks = AddtionalRemarks + self.StockReceipt.lines()[i].description3 + "<br/>"
                            }
                        }
                        if (self.StockReceipt.lines()[i].description4 !== null) {
                            if (self.StockReceipt.lines()[i].description4 !== "") {
                                AddtionalRemarks = AddtionalRemarks + self.StockReceipt.lines()[i].description4 + "<br/>"
                            }
                        }
                        if (self.StockReceipt.lines()[i].description5 !== null) {
                            if (self.StockReceipt.lines()[i].description5 !== "") {
                                AddtionalRemarks = AddtionalRemarks + self.StockReceipt.lines()[i].description5 + "<br/>"
                            }
                        }
                        if (self.StockReceipt.lines()[i].description6 !== null) {
                            if (self.StockReceipt.lines()[i].description6 !== "") {
                                AddtionalRemarks = AddtionalRemarks + self.StockReceipt.lines()[i].description6 + "<br/>"
                            }
                        }
                        defaultDescription = defaultDescription + "<span data-toggle='popover' data-trigger='hover' data-placement='top' data-html='true' data-content='" + AddtionalRemarks + "' data-title='Additional Remarks'><i class='fa fa-fw fa-info-circle'></i></span>";



                        var rowNode = table.row.add([
                            i + 1,
                            self.StockReceipt.lines()[i].itemCode,
                            defaultDescription,
                            self.StockReceipt.lines()[i].qty,
                            self.StockReceipt.lines()[i].locationText,
                            self.StockReceipt.lines()[i].unitPrice,
                            "<button type='button' class='btn btn-danger btn-xs' data-bind ='event: { click: function(rowid, data, event) { deleteStockReceiptLine("
                            + i + ", data, event) } }'><i class='fa fa-fw fa-remove'></i></button>"
                        ]).draw().node();
                        $(rowNode).attr("data-bind", "event: { dblclick: function(rowid, data, event) { editStockReceiptLine(" + i + ", data, event) } }");
                        ko.applyBindings(self, rowNode);
                    }

                }
                else {
                    table.clear().draw();
                }



                ////Deletes Row from html table and by calling draw datatable will be redrawn
                //var table = $('#ItemListTable').DataTable();
                //table.row(clickedRowId).remove().draw();

            }
            self.InitializeStockReceiptLine = function () {
                self.StockReceiptLine.lineNum('');
                self.StockReceiptLine.itemCode('');
                self.StockReceiptLine.description('');
                self.StockReceiptLine.overwriteDescription('');
                self.StockReceiptLine.description2('');
                self.StockReceiptLine.description3('');
                self.StockReceiptLine.description4('');
                self.StockReceiptLine.description5('');
                self.StockReceiptLine.description6('');
                self.StockReceiptLine.serialNumber('');
                self.StockReceiptLine.qty('');
                self.StockReceiptLine.location('');
                $('#Location').val('').trigger('change');
                self.StockReceiptLine.unitPrice('');

            }
            //Data Table operations
            self.StockReceipt.lines.subscribe(function (changes) {


                // Add Lines
                if (changes[0].status === "deleted") {


                }
                else if (self.StockReceiptLine.lineNum() === "") {
                    var table = $('#ItemListTable').DataTable();
                    var AddtionalRemarks = '';
                    var defaultDescription = '-';
                    if (changes[0].value.overwriteDescription === null) {
                        defaultDescription = changes[0].value.description;
                    }
                    else if (changes[0].value.overwriteDescription === "") {
                        defaultDescription = changes[0].value.description;
                    }
                    else {
                        defaultDescription = changes[0].value.overwriteDescription;
                    }
                    if (changes[0].value.description2 !== null) {
                        if (changes[0].value.description2 !== "") {
                            AddtionalRemarks = AddtionalRemarks + changes[0].value.description2 + "<br/>"
                        }
                    }
                    if (changes[0].value.description3 !== null) {
                        if (changes[0].value.description3 !== "") {
                            AddtionalRemarks = AddtionalRemarks + changes[0].value.description3 + "<br/>"
                        }
                    }
                    if (changes[0].value.description4 !== null) {
                        if (changes[0].value.description4 !== "") {
                            AddtionalRemarks = AddtionalRemarks + changes[0].value.description4 + "<br/>"
                        }
                    }
                    if (changes[0].value.description5 !== null) {
                        if (changes[0].value.description5 !== "") {
                            AddtionalRemarks = AddtionalRemarks + changes[0].value.description5 + "<br/>"
                        }
                    }
                    if (changes[0].value.description6 !== null) {
                        if (changes[0].value.description6 !== "") {
                            AddtionalRemarks = AddtionalRemarks + changes[0].value.description6 + "<br/>"
                        }
                    }
                    defaultDescription = defaultDescription + "<span data-toggle='popover' data-trigger='hover' data-placement='top' data-html='true' data-content='" + AddtionalRemarks + "' data-title='Additional Remarks'><i class='fa fa-fw fa-info-circle'></i></span>";



                    var rowNode = table.row.add([
                        changes[0].index + 1,
                        changes[0].value.itemCode,
                        defaultDescription,
                        changes[0].value.qty,
                        changes[0].value.locationText,
                        changes[0].value.unitPrice,
                        "<button type='button' class='btn btn-danger btn-xs' data-bind ='event: { click: function(rowid, data, event) { deleteStockReceiptLine("
